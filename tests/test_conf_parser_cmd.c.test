        case 'L':	/* longlong option.  */
          if (local_args_info.longlong_given || (check_ambiguity && args_info->longlong_given))
            {
              fprintf (stderr, "%s: `--longlong' (`-L') option given more than once%s\n", argv[0], (additional_error ? additional_error : ""));
