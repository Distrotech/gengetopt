        case 'l':	/* long option.  */
          if (local_args_info.long_given || (check_ambiguity && args_info->long_given))
            {
              fprintf (stderr, "%s: `--long' (`-l') option given more than once%s\n", argv[0], (additional_error ? additional_error : ""));
              goto failure;
            }
          if (args_info->long_given && ! override)
